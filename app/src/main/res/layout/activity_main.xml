<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5DC">


    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gra w kości. Autor: Michał Zdziarski"
        android:textColor="#FFFFFF"
        android:background="#A52A2A"
        android:textSize="26sp" />


    <Button
        android:id="@+id/rollDiceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RZUĆ KOŚĆMI"
        android:background="#D2691E"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">


        <TextView
            android:id="@+id/dice1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:text="?"
            android:textSize="60sp"
            android:gravity="center"
            android:textColor="#000000"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/dice2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:text="?"
            android:textSize="60sp"
            android:gravity="center"
            android:textColor="#000000"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/dice3"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:text="?"
            android:textSize="60sp"
            android:gravity="center"
            android:textColor="#000000"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/dice4"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:background="#FFFFFF"
            android:text="?"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/dice5"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:text="?"
            android:textSize="60dp"
            android:gravity="center"
            android:textColor="#000000"
            android:background="#FFFFFF" />

    </LinearLayout>


    <TextView
        android:id="@+id/rollResultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Wynik tego losowania: 0"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/gameResultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Wynik gry: 0"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/rollCountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Liczba rzutów: 0"
        android:textSize="20sp" />


    <Button
        android:id="@+id/resetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESETUJ WYNIK"
        android:background="#D2691E"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp" />

</LinearLayout>